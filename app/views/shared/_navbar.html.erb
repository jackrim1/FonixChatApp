<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to main_room_path do %>
            <%= image_tag("https://upload.wikimedia.org/wikipedia/commons/1/16/Clare_Fonix_Logo.png", class: "h-10") %>
          <% end %>
        </div>
        
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
          <% if user_signed_in? %>
            <div class="mx-4 invisible sm:visible border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              <%= current_user.email %>
            </div>
            <div class="mx-4 border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
            </div>
          <% else %>
            <div class="mx-4 invisible sm:visible border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              <%= link_to "Log in", new_user_session_path %><br />
            </div>
            <div class="mx-4 invisible sm:visible border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium">
              <%= link_to "Sign up", new_user_registration_path %><br />
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  
</nav>
